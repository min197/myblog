
@model PagedList.IPagedList<Model.EF.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Manage Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"].ToString()</div>
}

@section header{
    Danh sách Danh mục
}

@section jsFooter{
<script src="/assets/admin/js/controller/categoryController.js"></script>

   }
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Create", "Category", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <button type="submit" class="btn-primary">Tạo mới</button>
                            </div>
                        </div>
                    </div>

                }

            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ParentID</th>
                                <th>Title</th>
                                <th>MetaTitle</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Modified Date</th>
                                <th>Modified By</th>
                                <th>Status</th>
                                <th>ShowOnHome</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ParentID</th>
                                <th>Title</th>
                                <th>MetaTitle</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Modified Date</th>
                                <th>Modified By</th>
                                <th>Status</th>
                                <th>ShowOnHome</th>
                                <th>Manage</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ParentID</td>
                                    <td>@item.Title</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.ModifiedBy</td>
                                    <td><a href="#" class="btn-block" data-id="@item.ID">@(item.Status ? "Actived" : "Blocked")</a> </td>
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.ID">Edit</a>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                  {
                                      Confirm = "Do you really want to delete?",
                                      OnComplete = "$('#row_" + @item.ID + "').remove()",
                                      HttpMethod = "Delete"
                                  })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>