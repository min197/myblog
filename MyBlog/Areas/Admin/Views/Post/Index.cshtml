@model PagedList.IPagedList<Model.EF.Post>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Manage Post";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"].ToString()</div>
}

@section header{
    Danh sách Post
}

@section jsFooter{
<script src="/assets/admin/js/controller/postController.js"></script>
 }
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Index", "Post", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Create", "Post", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <button type="submit" class="btn-primary">Tạo mới</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                               <th>ID</th>
                                <th>Tên</th>
                                <th>Tác giả</th>
                                <th>ID tác giả</th>
                                <th>ID Blog gốc</th>
                                <th>ID Danh mục</th>
                                <th>Metatitle</th>
                                <th>Link</th>
                                <th>Giới thiệu</th>
                                <th>Ngày đăng</th>
                                <th>Tạo bởi</th>
                                <th>Ngày tạo</th>
                                <th>Chỉnh sửa bởi</th>
                                <th>Ngày chỉnh sửa</th>
                                <th>Link ảnh</th>
                                <th>Số lượng đọc</th>
                                <th>Trạng thái</th>
                                <th>Tác vụ</th>
                                <th>Lịch sử</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Tác giả</th>
                                <th>ID tác giả</th>
                                <th>ID Blog gốc</th>
                                <th>ID Danh mục</th>
                                <th>Metatitle</th>
                                <th>Link</th>
                                <th>Giới thiệu</th>
                                <th>Ngày đăng</th>
                                <th>Tạo bởi</th>
                                <th>Ngày tạo</th>
                                <th>Chỉnh sửa bởi</th>
                                <th>Ngày chỉnh sửa</th>
                                <th>Link ảnh</th>
                                <th>Số lượng đọc</th>
                                <th>Trạng thái</th>
                                <th>Tác vụ</th>
                                <th>Lịch sử</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Title</td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.AuthorID</td>
                                    <td>@item.parentID</td>
                                    <td>@item.CategoryID</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.Link</td>
                                    <td>@Html.Raw(@item.Published)</td>
                                    <td>@item.DatePublished</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedBy</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.PostImage</td>
                                    <td>@item.CountRead</td>
                                    <td><a href="#" class="btn-block" data-id="@item.ID" >@(item.Status ? "Actived" : "Blocked")</a> </td>
                                    <td>
                                        <a href="/Admin/Post/Edit/@item.ID">Edit</a>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                  {
                                      Confirm = "Xác nhận xóa?",
                                      OnComplete = "$('#row_" + @item.ID + "').remove()",
                                      HttpMethod = "Delete"
                                  })
                                    </td>
                                    <td>@item.HistoryModified</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>