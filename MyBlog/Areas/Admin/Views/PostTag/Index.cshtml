@model PagedList.IPagedList<Model.EF.PostTag>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Post Tag";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"].ToString()</div>
}

@section header{
    Danh sách bài viết - tag
}

@section jsFooter{
    <script src="/assets/admin/js/controller/PostTag.js"></script>
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Index", "PostTag", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Create", "PostTag", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <button type="submit" class="btn-primary">Tạo mới Tag</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Blog ID</th>
                                <th>Tên Blog</th>
                                <th>Tag ID</th>
                                <th>Tên Tag</th>
                                <th>Trạng thái</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Blog ID</th>
                                <th>Tên Blog</th>
                                <th>Tag ID</th>
                                <th>Tên Tag</th>
                                <th>Trạng thái</th>
                                <th>Tác vụ</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.PostID</td>
                                    <td>@item.PostTitle</td>
                                    <td>@item.TagID</td>
                                    <td>@item.TagTitle</td>
                                    <td><a href="#" class="btn-block" data-id="@item.ID">@(item.Status ? "Actived" : "Blocked")</a> </td>
                                    <td>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Xác nhận xóa?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>