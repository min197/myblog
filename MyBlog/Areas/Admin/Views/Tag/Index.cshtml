@model PagedList.IPagedList<Model.EF.Tag>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Manage Post";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"].ToString()</div>
}

@section header{
    Danh sách Tag
}

@section jsFooter{
    <script src="/assets/admin/js/controller/tagController.js"></script>
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Index", "Tag", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Create", "Tag", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <button type="submit" class="btn-primary">Tạo mới</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Meta Title</th>
                                <th>CreatedBy</th>
                                <th>CreatedDate</th>
                                <th>Modified Date</th>
                                <th>Modified By</th>
                                <th>Content</th>
                                <th>Status</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Meta Title</th>
                                <th>CreatedBy</th>
                                <th>CreatedDate</th>
                                <th>Modified Date</th>
                                <th>Modified By</th>
                                <th>Content</th>
                                <th>Status</th>
                                <th>Tác vụ</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Title</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.ModifiedBy</td>
                                    <td>@Html.Raw(@item.Content)</td>
                                    <td><a href="#" class="btn-block" data-id="@item.ID">@(item.Status ? "Actived" : "Blocked")</a> </td>
                                    <td>
                                        <a href="/Admin/Tag/Edit/@item.ID">Edit</a>
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = @item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Do you really want to delete?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>