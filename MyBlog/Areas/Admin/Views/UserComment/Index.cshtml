@model PagedList.IPagedList<Model.EF.UserComment>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Manage User Comment";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


@section header{
    Danh sách người dùng bình luận
}


<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("Index", "Comment", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Avatar Image</th>
                                <th>Email</th>
                                <th>Website</th>
                                <th>Ngày tạo</th>
                                <th>Chấp nhận liên hệ</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>UserName</th>
                                <th>Avatar Image</th>
                                <th>Email</th>
                                <th>Website</th>
                                <th>Ngày tạo</th>
                                <th>Chấp nhận liên hệ</th>
                                <th>Trạng thái</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.UserName</td>
                                    <td>@item.AvatarImage</td>
                                    <td>@item.Email</td>
                                    <td>@item.Website</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@(item.AcceptContact ? "Đồng ý" : "Không đồng ý")</td>
                                    <td>@(item.Status ? "Active" : "Block")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>