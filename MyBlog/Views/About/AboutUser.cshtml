@model Model.EF.User
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewPost = (List<Model.EF.Post>)ViewBag.NewPost;
    var listHotPost = (List<Model.EF.Post>)ViewBag.HotPost;
    var postByUserID = (List<Model.EF.Post>)ViewBag.PostByUserID;
}

<section class="blog-post">
    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header text-center">Thông tin cá nhân</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="/trang-chu">Trang chủ</a>
                    </li>
                    <li><a href="/gioi-thieu">Giới thiệu</a></li>
                    <li class="active">@Model.FirstName @Model.MidName @Model.LastName</li>
                </ol>
            </div>
        </div>
        <!-- Page Heading/Breadcrumbs -->
        
        <!-- Content Row -->
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Preview Image -->
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive blogpost-img-w3ls" src="@Model.Avatar" alt=""></figure>
                    </div>
                </div>

                <!-- Profile tác giả -->
                @Html.Raw(@Model.Profile)
                
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4 blog-post-w3layouts">
                <!-- Blog Search Well -->
                <div class="well blog-post-agileits">
                    <h4>Tìm kiếm Blog</h4>
                    @using (Html.BeginForm("Index", "Blog", FormMethod.Get))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" value="@ViewBag.SearchString" name="searchString" placeholder="Search" required />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                            </span>
                        </div>

                    }
                    <!-- /.input-group -->
                </div>
                <section class="blogwell-w3ls">
                 
                    <!-- Side Widget Well -->
                    <div class="well">
                        <h4>Bài viết bởi @Model.FirstName @Model.MidName @Model.LastName:</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-unstyled">
                                    @foreach (var item in postByUserID)
                                    {
                                        <li><a href="/blog/@item.MetaTitle-@item.ID"><span class="fa fa-hand-o-right" aria-hidden="true"></span>@item.Title<span class="fa fa-hand-o-left" aria-hidden="true"></span></a></li>
                                    }
                                </ul>
                            </div>
                            <!-- /.col-lg-6 -->
                        </div>
                        <!-- /.row -->
                    </div>


                    <div class="well">
                        <h4>Bài viết mới:</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-unstyled">
                                    @foreach (var item in listNewPost)
                                    {
                                        <li><a href="/blog/@item.MetaTitle-@item.ID"><span class="fa fa-hand-o-right" aria-hidden="true"></span>@item.Title<span class="fa fa-hand-o-left" aria-hidden="true"></span></a></li>
                                    }


                                </ul>
                            </div>
                            <!-- /.col-lg-6 -->
                        </div>
                        <!-- /.row -->
                    </div>

                    <div class="well">
                        <h4>Bài viết hot:</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-unstyled">
                                    @foreach (var item in listHotPost)
                                    {
                                        <li><a href="/blog/@item.MetaTitle-@item.ID"><span class="fa fa-hand-o-right" aria-hidden="true"></span>@item.Title<span class="fa fa-hand-o-left" aria-hidden="true"></span></a></li>
                                    }


                                </ul>
                            </div>
                            <!-- /.col-lg-6 -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- Side Widget Well -->
                </section>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

</section>	