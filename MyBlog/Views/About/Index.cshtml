
@{
    ViewBag.Title = "About Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var postAbout = (Model.EF.Post)ViewBag.PostAbout;
    var listMember = (List < Model.EF.User >) ViewBag.ListMember;


}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header text-center">Thông tin về chúng tôi</h2>
            <ol class="breadcrumb">
                <li><a href="/trang-chu">Trang chủ</a></li>
                <li class="active">Giới thiệu</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Intro Content -->
    <section class="about-w3ls">
        <div class="row">
            <div class="col-md-6">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive" src="@postAbout.PostImage" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Giới thiệu:</h3>
                @Html.Raw(@postAbout.Content)
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- Team Members -->
    <section class="team">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header text-center">Chúng tôi gồm có:</h3>
            </div>
            @foreach (var item in listMember)
            {
                <div class="col-md-4 col-sm-6 text-center">
                    <div class="thumbnail">
                        <div class="hover01 column">
                            <div>
                                <a href="/gioi-thieu/user-@item.ID"><figure><img class="img-responsive" src="@item.Avatar" alt="" style="height:350px;width:300px"></figure> </a>
                            </div>
                        </div>
                        <div class="caption">
                            <a href="/gioi-thieu/user-@item.ID"><h4>@item.FirstName @item.MidName @item.LastName</h4></a>
                            <p class="team-w3ls">@item.JobTitle</p>
                            <p class="team-w3agile">@item.About</p>
                            <ul class="social-icons3">
                                @if (item.LinkToFacebook != null)
                                {
                                    <li><a href="@item.LinkToFacebook"><i class="fa fa-facebook-square" style="font-size:30px; color:dodgerblue"></i></a></li>
                                } 
                                @if (item.LinkToInstagram != null)
                                {
                                    <li><a href="@item.LinkToInstagram"><i class="fa fa-instagram" style="font-size:30px; color:purple"></i></a></li>
                                } 
                                @if (item.LinkToTwitter != null)
                                {
                                    <li><a href="@item.LinkToTwitter"><i class="fa fa-twitter-square"style="font-size:30px; color:darkblue"></i></a></li>
                                } 
                                @if (item.LinkToYoutube != null)
                                {
                                    <li><a href="@item.LinkToYoutube"><i class="fa fa-youtube-square"style="font-size:30px; color:red"></i></a></li>
                                } 
                            </ul>
                        </div>
                    </div>
                </div>
            }

            
            
        </div>
        <!-- /.row -->
    </section>
 <section class="cust">
        <!-- Our Customers -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header text-center">Đối tác của chúng tôi:</h3>
            </div>

        <!-- /.row -->
        <hr>
        </div>
<!-- /.container -->
</section>	

