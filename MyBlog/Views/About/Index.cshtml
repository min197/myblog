
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var postAbout = (Model.EF.Post)ViewBag.PostAbout;
    var listMember = (List < Model.EF.User >) ViewBag.ListMember;


}

<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header text-center">About Us</h2>
            <ol class="breadcrumb">
                <li><a href="Home/Index">Home</a></li>
                <li class="active">About</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Intro Content -->
    <section class="about-w3ls">
        <div class="row">
            <div class="col-md-6">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive" src="@postAbout.PostImage" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3>About Us</h3>
                @Html.Raw(@postAbout.Content)
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- Team Members -->
    <section class="team">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header text-center">Our Team</h3>
            </div>
            @foreach (var item in listMember)
            {
                <div class="col-md-4 col-sm-6 text-center">
                    <div class="thumbnail">
                        <div class="hover01 column">
                            <div>
                                <a href="/gioi-thieu/user-@item.ID"><figure><img class="img-responsive" src="@item.Avatar" alt=""></figure> </a>
                            </div>
                        </div>
                        <div class="caption">
                            <a href="/gioi-thieu/user-@item.ID"><h4>@item.FirstName @item.MidName @item.LastName</h4></a>
                            <p class="team-w3ls">@item.JobTitle</p>
                            <p class="team-w3agile">@item.About</p>
                            <ul class="social-icons3">
                                @if (item.LinkToFacebook != null)
                                {
                                    <li><a href="@item.LinkToFacebook"><i class="fa fa-facebook"></i></a></li>
                                } 
                                @if (item.LinkToInstagram != null)
                                {
                                    <li><a href="@item.LinkToInstagram"><i class="fa fa-linkedin"></i></a></li>
                                } 
                                @if (item.LinkToTwitter != null)
                                {
                                    <li><a href="@item.LinkToTwitter"><i class="fa fa-twitter"></i></a></li>
                                } 
                                @if (item.LinkToYoutube != null)
                                {
                                    <li><a href="@item.LinkToYoutube"><i class="fa fa-google-plus"></i></a></li>
                                } 
                            </ul>
                        </div>
                    </div>
                </div>
            }

            
            
        </div>
        <!-- /.row -->
    </section>
 <section class="cust">
        <!-- Our Customers -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header text-center">Our Customers</h3>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img1.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img2.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img3.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img4.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img5.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-6 cust-w3ls">
                <div class="hover01 column">
                    <div>
                        <figure><img class="img-responsive customer-img" src="images/cust-img6.jpg" alt=""></figure>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <hr>
</div>
<!-- /.container -->
</section>	

